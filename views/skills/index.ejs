<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
</head>

<body>

  <header>
    <%- include('../partials/header'); %>
  </header>


  <h1>All Skills</h1>

  <h3>as of <%= time %>
  </h3>

  <ol>

   

    <% skills.forEach(function(s) { %>
      <li>
        <form action="/skills/<%= s.id %>?_method=DELETE"
          class="delete-form" method="POST">
          <button type="submit">X</button>
        </form>
  

      
      
        <a href="/skills/<%= s.id %>">
          <%= s.skill %>
        </a>
        -
        <%= s.proficiency %>
      </li>
      <% }); %>
  </ol>


  <a href="/skills/new">Add a skill</a>

  <footer>
    <%- include('../partials/footer'); %>
  </footer>

</body>

</html>